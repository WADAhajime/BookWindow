<div class="bs-component">
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to '所有している書籍', book_shelfs_top_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to '書籍を探す', book_shelfs_search_path, class: "nav-link" %>
        </li>
      </ul>
      <%= form_tag(book_shelfs_search_path, method: :get, class: 'form-inline my-2 my-lg-0') do %>
        <%= text_field_tag :title, @title, class: 'form-control mr-sm-2', placeholder:'購入した書籍を検索', size: 30 %>
        <%= submit_tag '検索', class: "btn btn-secondary my-2 my-sm-0" %>
      <% end %>
    </div>
  </nav>
</div>
  
<div class="container-fluid">
  <% @books.each do |book| %>
    <div class="row book">
      <div class="col-md-4 image">
        <div class="col-md-6"><img src="<%= book[:image_url] %>" class="img-fluid" alt=""></div>
      </div>
      <div class="col-md-5">
        <div class="text">
          <h3><%= book[:title] %></h3>
        </div>
      </div>
    <% if @purchased_books.blank? %>
      <%= form_tag(book_shelfs_path, method: :post) do %>
        <%= hidden_field_tag :isbn, book[:isbn] %>
        <%= submit_tag '購入済み書籍に追加' %>
      <% end %>
    <% else %>
      <% @purchased_books.each do |pur_book| %>
        <% if book[:isbn] == pur_book.isbn %>
          <P>購入済み書籍に追加済み</P>
        <% else %>
          <%= form_tag(book_shelfs_path, method: :post) do %>
            <%= hidden_field_tag :isbn, book[:isbn] %>
            <%= submit_tag '購入済み書籍に追加' %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>
