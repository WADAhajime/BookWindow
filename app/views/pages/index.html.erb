<div class="container-fluid">
  <div class="top-hero-wrapper text-center">
    <h1 class="text-white">セール情報一覧</h1>
  </div>
  
  <% @books.each do |book| %>
    <% if book.stores.present?%>
      <div class="row book">
        <div class="col-md-4 image">
          <img src="<%= book[:image_url] %>" class="img-fluid" alt="">
        </div>
        <div class="col-md-5">
          <div class="text">
            <div><h3><%= book.title %></h3></div>
            <% book.stores.each do |store| %>
              <%= store.name %>
              <%= store.itemPrice %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


